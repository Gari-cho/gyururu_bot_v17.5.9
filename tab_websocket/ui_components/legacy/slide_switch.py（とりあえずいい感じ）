#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
ğŸ® çµ±åˆæ€§æ”¹å–„ç‰ˆ è‡ªå‹•æ¥ç¶šSlideSwitch v3.0
Improved Auto Connection SlideSwitch with Unified State Management

æ”¹å–„ãƒã‚¤ãƒ³ãƒˆ:
- SlideSwitch.set() ã‚’ä¸­å¿ƒã¨ã—ãŸä¸€å…ƒçš„çŠ¶æ…‹ç®¡ç†
- set_slide_switch_state() ã¯ SlideSwitch.set() ã‚’å†…éƒ¨å‘¼ã³å‡ºã—
- UIæ›´æ–°ã¨ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯å‘¼ã³å‡ºã—ã®å®Œå…¨åŒæœŸ
- ã‚¯ãƒªãƒƒã‚¯æ“ä½œã¨çŠ¶æ…‹å¤‰æ›´ã®ç¢ºå®Ÿãªé€£æº
- è‡ªå‹•æ¥ç¶šãƒ»è‡ªå‹•OFFæ©Ÿèƒ½ã¨ã®å®Œå…¨æ•´åˆæ€§
"""

import tkinter as tk
from tkinter import ttk
import threading
import time
import logging

# ãƒ­ã‚°è¨­å®š
logging.basicConfig(level=logging.INFO, format='[%(asctime)s] %(message)s', datefmt='%H:%M:%S')
logger = logging.getLogger(__name__)


class SlideSwitch(tk.Frame):
    """
    æ”¹è‰¯ç‰ˆSlideSwitch - çŠ¶æ…‹ã¨UIå®Œå…¨åŒæœŸ
    
    ç‰¹å¾´:
    - set() ãƒ¡ã‚½ãƒƒãƒ‰ã«ã‚ˆã‚‹ä¸€å…ƒçš„çŠ¶æ…‹ç®¡ç†
    - UIæ›´æ–°ã¨ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ã®å®Œå…¨åŒæœŸ
    - è‡ªå‹•OFFæ©Ÿèƒ½çµ±åˆ
    """
    
    def __init__(self, master=None, text_on="ON", text_off="OFF", 
                 initial_value=False, callback=None, service_key=None, **kwargs):
        """
        åˆæœŸåŒ–
        
        Args:
            master: è¦ªã‚¦ã‚£ã‚¸ã‚§ãƒƒãƒˆ
            text_on: ONè¡¨ç¤ºãƒ†ã‚­ã‚¹ãƒˆ
            text_off: OFFè¡¨ç¤ºãƒ†ã‚­ã‚¹ãƒˆ
            initial_value: åˆæœŸå€¤
            callback: çŠ¶æ…‹å¤‰æ›´æ™‚ã®ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯é–¢æ•° callback(service_key, value)
            service_key: ã‚µãƒ¼ãƒ“ã‚¹è­˜åˆ¥ã‚­ãƒ¼
        """
        super().__init__(master, **kwargs)
        
        # åŸºæœ¬è¨­å®š
        self._value = initial_value
        self._text_on = text_on
        self._text_off = text_off
        self._callback = callback
        self._service_key = service_key
        self._after_id = None
        
        # UIä½œæˆ
        self._create_ui()
        
        # åˆæœŸçŠ¶æ…‹åæ˜ 
        self._update_ui()
    
    def _create_ui(self):
        """UIè¦ç´ ä½œæˆ"""
        self.configure(width=80, height=30, bg="#f5f5f5")
        
        # ã‚­ãƒ£ãƒ³ãƒã‚¹ä½œæˆ
        self.canvas = tk.Canvas(
            self, 
            width=80, 
            height=30, 
            bd=0, 
            highlightthickness=0,
            bg="#e57373"  # åˆæœŸ: èµ¤ï¼ˆOFFçŠ¶æ…‹ï¼‰
        )
        self.canvas.pack(fill=tk.BOTH, expand=True)
        
        # UIè¦ç´ ä½œæˆ
        self.bg_rect = self.canvas.create_rectangle(2, 2, 78, 28, outline="", fill="#e57373")
        self.indicator = self.canvas.create_oval(5, 5, 25, 25, outline="#cccccc", fill="white", width=2)
        self.text = self.canvas.create_text(40, 15, text=self._text_off, fill="white", font=("Yu Gothic UI", 8, "bold"))
        
        # ã‚¤ãƒ™ãƒ³ãƒˆãƒã‚¤ãƒ³ãƒ‰
        self.canvas.bind("<Button-1>", self._on_canvas_click)
        self.canvas.bind("<Enter>", lambda e: self.canvas.config(cursor="hand2"))
        self.canvas.bind("<Leave>", lambda e: self.canvas.config(cursor=""))
    
    def _on_canvas_click(self, event=None):
        """ã‚­ãƒ£ãƒ³ãƒã‚¹ã‚¯ãƒªãƒƒã‚¯å‡¦ç†"""
        # è‡ªå‹•OFFäºˆç´„ä¸­ã¯ã‚¯ãƒªãƒƒã‚¯ã‚’ãƒ–ãƒ­ãƒƒã‚¯
        if self._after_id:
            logger.debug(f"âš ï¸ {self._service_key}: è‡ªå‹•OFFäºˆç´„ä¸­ã®ãŸã‚ã‚¯ãƒªãƒƒã‚¯ç„¡è¦–")
            return
            
        # ãƒˆã‚°ãƒ«æ“ä½œå®Ÿè¡Œ
        self.toggle()
    
    def toggle(self):
        """çŠ¶æ…‹ãƒˆã‚°ãƒ«ï¼ˆset()ã‚’å†…éƒ¨å‘¼ã³å‡ºã—ï¼‰"""
        self.set(not self._value)
    
    def set(self, value: bool, trigger_callback=True):
        """
        çŠ¶æ…‹è¨­å®šï¼ˆä¸€å…ƒçš„çŠ¶æ…‹ç®¡ç†ï¼‰
        
        Args:
            value: è¨­å®šå€¤
            trigger_callback: ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯å‘¼ã³å‡ºã—ãƒ•ãƒ©ã‚°
        """
        # å€¤ãŒå¤‰ã‚ã‚‰ãªã„å ´åˆã¯ä½•ã‚‚ã—ãªã„
        if self._value == value and not hasattr(self, '_force_update'):
            return
            
        # çŠ¶æ…‹æ›´æ–°
        self._value = value
        
        # è‡ªå‹•OFFäºˆç´„ã‚’ã‚­ãƒ£ãƒ³ã‚»ãƒ«
        self.cancel_auto_off()
        
        # UIæ›´æ–°
        self._update_ui()
        
        # ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯å‘¼ã³å‡ºã—
        if trigger_callback and self._callback:
            try:
                if self._service_key:
                    self._callback(self._service_key, self._value)
                else:
                    self._callback(self._value)
            except Exception as e:
                logger.error(f"âŒ ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯å‘¼ã³å‡ºã—ã‚¨ãƒ©ãƒ¼ ({self._service_key}): {e}")
    
    def _update_ui(self):
        """UIæ›´æ–°ï¼ˆçŠ¶æ…‹ã«åŸºã¥ã„ã¦ä¸€å…ƒçš„ã«æ›´æ–°ï¼‰"""
        try:
            if self._value:
                # ONçŠ¶æ…‹: è–„ç·‘
                bg_color = "#81c784"
                indicator_x1, indicator_x2 = 55, 75  # å³å¯„ã›
                text_content = self._text_on
            else:
                # OFFçŠ¶æ…‹: èµ¤
                bg_color = "#e57373"
                indicator_x1, indicator_x2 = 5, 25   # å·¦å¯„ã›
                text_content = self._text_off
            
            # ã‚­ãƒ£ãƒ³ãƒã‚¹èƒŒæ™¯æ›´æ–°
            self.canvas.config(bg=bg_color)
            self.canvas.itemconfig(self.bg_rect, fill=bg_color)
            
            # ã‚¤ãƒ³ã‚¸ã‚±ãƒ¼ã‚¿ãƒ¼ä½ç½®æ›´æ–°
            self.canvas.coords(self.indicator, indicator_x1, 5, indicator_x2, 25)
            
            # ãƒ†ã‚­ã‚¹ãƒˆæ›´æ–°
            self.canvas.itemconfig(self.text, text=text_content)
            
        except Exception as e:
            logger.error(f"âŒ UIæ›´æ–°ã‚¨ãƒ©ãƒ¼ ({self._service_key}): {e}")
    
    def get(self) -> bool:
        """ç¾åœ¨ã®çŠ¶æ…‹å–å¾—"""
        return self._value
    
    def auto_off(self, delay_ms=3000):
        """
        è‡ªå‹•OFFè¨­å®š
        
        Args:
            delay_ms: é…å»¶æ™‚é–“ï¼ˆãƒŸãƒªç§’ï¼‰
        """
        # æ—¢å­˜ã®äºˆç´„ã‚’ã‚­ãƒ£ãƒ³ã‚»ãƒ«
        self.cancel_auto_off()
        
        logger.info(f"â° {self._service_key}: {delay_ms/1000}ç§’å¾Œã«è‡ªå‹•OFFå®Ÿè¡Œ")
        
        def execute_auto_off():
            logger.info(f"â° {self._service_key}: è‡ªå‹•OFFå®Ÿè¡Œ")
            self.set(False)  # set()ã‚’é€šã—ã¦çŠ¶æ…‹å¤‰æ›´
            self._after_id = None
        
        self._after_id = self.after(delay_ms, execute_auto_off)
    
    def cancel_auto_off(self):
        """è‡ªå‹•OFFäºˆç´„ã‚­ãƒ£ãƒ³ã‚»ãƒ«"""
        if self._after_id:
            self.after_cancel(self._after_id)
            self._after_id = None
            logger.debug(f"â° {self._service_key}: è‡ªå‹•OFFäºˆç´„ã‚­ãƒ£ãƒ³ã‚»ãƒ«")
    
    def set_connecting_state(self, is_connecting=True):
        """
        æ¥ç¶šä¸­çŠ¶æ…‹è¡¨ç¤º
        
        Args:
            is_connecting: æ¥ç¶šä¸­ãƒ•ãƒ©ã‚°
        """
        try:
            if is_connecting:
                # æ¥ç¶šä¸­: ã‚ªãƒ¬ãƒ³ã‚¸ã§ç‚¹æ»…
                self.canvas.config(bg="#ff9800")
                self.canvas.itemconfig(self.bg_rect, fill="#ff9800")
                self.canvas.itemconfig(self.text, text="æ¥ç¶šä¸­...")
                self._start_connecting_blink()
            else:
                # é€šå¸¸çŠ¶æ…‹ã«æˆ»ã™
                self._update_ui()
                
        except Exception as e:
            logger.error(f"âŒ æ¥ç¶šçŠ¶æ…‹è¡¨ç¤ºã‚¨ãƒ©ãƒ¼ ({self._service_key}): {e}")
    
    def _start_connecting_blink(self):
        """æ¥ç¶šä¸­ã®ç‚¹æ»…é–‹å§‹"""
        if hasattr(self, '_connecting_blink') and self._connecting_blink:
            current_bg = self.canvas.cget("bg")
            if current_bg == "#ff9800":
                new_bg = "#ffcc80"  # è–„ã„ã‚ªãƒ¬ãƒ³ã‚¸
            else:
                new_bg = "#ff9800"
            
            self.canvas.config(bg=new_bg)
            self.canvas.itemconfig(self.bg_rect, fill=new_bg)
            self.after(500, self._start_connecting_blink)
    
    def start_connecting_animation(self):
        """æ¥ç¶šä¸­ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³é–‹å§‹"""
        self._connecting_blink = True
        self.set_connecting_state(True)
    
    def stop_connecting_animation(self):
        """æ¥ç¶šä¸­ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³åœæ­¢"""
        self._connecting_blink = False
        self.set_connecting_state(False)


# ===== çµ±åˆé–¢æ•°: å¤–éƒ¨ã‹ã‚‰ã®çŠ¶æ…‹åˆ¶å¾¡ =====

def set_slide_switch_state(slide_switch, value: bool, log_widget=None, message: str = ""):
    """
    SlideSwitchçŠ¶æ…‹è¨­å®šï¼ˆçµ±åˆç‰ˆï¼‰
    
    Args:
        slide_switch: SlideSwitch ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹
        value: è¨­å®šå€¤
        log_widget: ãƒ­ã‚°è¡¨ç¤ºã‚¦ã‚£ã‚¸ã‚§ãƒƒãƒˆ
        message: ãƒ­ã‚°ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
    """
    if slide_switch and hasattr(slide_switch, 'set'):
        # SlideSwitch.set()ã‚’é€šã—ã¦çŠ¶æ…‹å¤‰æ›´ï¼ˆä¸€å…ƒç®¡ç†ï¼‰
        slide_switch.set(value)
    
    # ãƒ­ã‚°å‡ºåŠ›
    if log_widget and message and hasattr(log_widget, "insert"):
        log_widget.insert("end", f"{message}\n")
        log_widget.see("end")


def create_slide_switch(parent, service_key, toggle_var, callback):
    """
    SlideSwitchä½œæˆï¼ˆäº’æ›æ€§ç¶­æŒï¼‰
    
    Args:
        parent: è¦ªãƒ•ãƒ¬ãƒ¼ãƒ 
        service_key: ã‚µãƒ¼ãƒ“ã‚¹ã‚­ãƒ¼
        toggle_var: BooleanVarï¼ˆä½¿ç”¨ã•ã‚Œãªã„ãŒäº’æ›æ€§ã®ãŸã‚ä¿æŒï¼‰
        callback: ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯é–¢æ•°
        
    Returns:
        SlideSwitch: ä½œæˆã•ã‚ŒãŸSlideSwitch
    """
    initial_value = toggle_var.get() if toggle_var else False
    
    slide_switch = SlideSwitch(
        parent,
        text_on="ON",
        text_off="OFF",
        initial_value=initial_value,
        callback=callback,
        service_key=service_key
    )
    
    return slide_switch


def update_slide_switch_appearance(slide_switch, is_on):
    """
    SlideSwitchå¤–è¦³æ›´æ–°ï¼ˆäº’æ›æ€§ç¶­æŒï¼‰
    
    Args:
        slide_switch: SlideSwitch ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹
        is_on: ON/OFFçŠ¶æ…‹
    """
    if slide_switch and hasattr(slide_switch, 'set'):
        slide_switch.set(is_on, trigger_callback=False)  # ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ãªã—ã§çŠ¶æ…‹æ›´æ–°


def animate_slide_switch(slide_switch, to_on=True):
    """
    SlideSwitch ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ï¼ˆäº’æ›æ€§ç¶­æŒï¼‰
    
    Args:
        slide_switch: SlideSwitch ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹  
        to_on: ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³æ–¹å‘
    """
    if slide_switch and hasattr(slide_switch, 'set'):
        slide_switch.set(to_on)


# ===== è‡ªå‹•æ¥ç¶šæ©Ÿèƒ½çµ±åˆã‚¯ãƒ©ã‚¹ =====

class AutoConnectionManager:
    """è‡ªå‹•æ¥ç¶šç®¡ç†ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self):
        self.connection_threads = {}
        self.is_connecting = {}
        self.connection_callback = None
    
    def set_connection_callback(self, callback):
        """æ¥ç¶šå‡¦ç†ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯è¨­å®š"""
        self.connection_callback = callback
    
    def start_auto_connection(self, slide_switch, service_key):
        """è‡ªå‹•æ¥ç¶šé–‹å§‹"""
        if self.is_connecting.get(service_key, False):
            return
            
        logger.info(f"ğŸ”— {service_key} è‡ªå‹•æ¥ç¶šé–‹å§‹")
        
        self.is_connecting[service_key] = True
        slide_switch.start_connecting_animation()
        
        # æ¥ç¶šå‡¦ç†ã‚’åˆ¥ã‚¹ãƒ¬ãƒƒãƒ‰ã§å®Ÿè¡Œ
        connection_thread = threading.Thread(
            target=self._connection_worker,
            args=(slide_switch, service_key),
            daemon=True
        )
        connection_thread.start()
        self.connection_threads[service_key] = connection_thread
    
    def _connection_worker(self, slide_switch, service_key):
        """æ¥ç¶šå‡¦ç†ãƒ¯ãƒ¼ã‚«ãƒ¼"""
        try:
            # æ¥ç¶šå‡¦ç†å®Ÿè¡Œ
            if self.connection_callback:
                success = self.connection_callback(service_key)
            else:
                success = self._default_connection_test(service_key)
            
            # UIã‚¹ãƒ¬ãƒƒãƒ‰ã§çµæœå‡¦ç†
            slide_switch.after(0, lambda: self._handle_connection_result(slide_switch, service_key, success))
            
        except Exception as e:
            logger.error(f"âŒ {service_key} æ¥ç¶šã‚¨ãƒ©ãƒ¼: {e}")
            slide_switch.after(0, lambda: self._handle_connection_result(slide_switch, service_key, False))
    
    def _default_connection_test(self, service_key):
        """ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆæ¥ç¶šãƒ†ã‚¹ãƒˆ"""
        import random
        
        # æ¥ç¶šæ™‚é–“æ¨¡æ“¬ï¼ˆ1-3ç§’ï¼‰
        time.sleep(random.uniform(1.0, 3.0))
        
        # 70%ã®ç¢ºç‡ã§æˆåŠŸ
        return random.random() < 0.7
    
    def _handle_connection_result(self, slide_switch, service_key, success):
        """æ¥ç¶šçµæœå‡¦ç†"""
        self.is_connecting[service_key] = False
        slide_switch.stop_connecting_animation()
        
        if success:
            logger.info(f"âœ… {service_key} æ¥ç¶šæˆåŠŸ")
            slide_switch.set(True)
        else:
            logger.warning(f"âŒ {service_key} æ¥ç¶šå¤±æ•— - 3ç§’å¾Œã«è‡ªå‹•OFF")
            slide_switch.set(True)  # ä¸€æ—¦ONã«ã—ã¦ã‹ã‚‰
            slide_switch.auto_off(3000)  # 3ç§’å¾Œã«è‡ªå‹•OFF


# ===== ãƒ†ã‚¹ãƒˆç”¨ãƒ‡ãƒ¢ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³ =====

class SlideSwichDemoApp:
    """SlideSwitch ãƒ‡ãƒ¢ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³"""
    
    def __init__(self):
        self.switches = {}
        self.connection_manager = AutoConnectionManager()
        self.connection_manager.set_connection_callback(self.test_connection)
        
        self._create_ui()
    
    def test_connection(self, service_key):
        """WebSocketã‚¿ãƒ–ä»•æ§˜æº–æ‹  æ¥ç¶šå‡¦ç†"""
        import random
        
        print(f"ğŸ”— {service_key} æ¥ç¶šãƒ†ã‚¹ãƒˆå®Ÿè¡Œä¸­...")
        
        # WebSocketã‚¿ãƒ–ä»•æ§˜æº–æ‹  ã‚µãƒ¼ãƒ“ã‚¹åˆ¥è¨­å®š
        service_configs = {
            'onecomme': {
                'success_rate': 0.7,
                'connection_time': (1.5, 3.0),
                'description': 'ã‚ã‚“ã‚³ãƒ¡ WebSocketæ¥ç¶š'
            },
            'messagebus': {
                'success_rate': 0.9,
                'connection_time': (0.5, 1.2),
                'description': 'MessageBus å†…éƒ¨é€šä¿¡'
            },
            'bouyomi': {
                'success_rate': 0.8,
                'connection_time': (0.8, 2.0),
                'description': 'æ£’èª­ã¿ã¡ã‚ƒã‚“ TCPæ¥ç¶š'
            },
            'voicevox': {
                'success_rate': 0.6,
                'connection_time': (2.0, 4.0),
                'description': 'VOICEVOX APIæ¥ç¶š'
            },
            'obs': {
                'success_rate': 0.75,
                'connection_time': (1.0, 2.5),
                'description': 'OBS WebSocketæ¥ç¶š'
            }
        }
        
        config = service_configs.get(service_key, {
            'success_rate': 0.7,
            'connection_time': (1.0, 2.0),
            'description': f'{service_key} æ¥ç¶š'
        })
        
        print(f"   {config['description']} è©¦è¡Œä¸­...")
        
        # æ¥ç¶šæ™‚é–“æ¨¡æ“¬
        connection_time = random.uniform(*config['connection_time'])
        time.sleep(connection_time)
        
        # æˆåŠŸåˆ¤å®š
        success = random.random() < config['success_rate']
        
        if success:
            print(f"   âœ… {config['description']} æˆåŠŸ ({connection_time:.1f}ç§’)")
        else:
            print(f"   âŒ {config['description']} å¤±æ•— ({connection_time:.1f}ç§’)")
        
        return success
    
    def _create_ui(self):
        """UIä½œæˆ"""
        self.root = tk.Tk()
        self.root.title("ğŸŒ WebSocketã‚¿ãƒ–æº–æ‹  è‡ªå‹•æ¥ç¶šSlideSwitch")
        self.root.geometry("650x550")
        self.root.configure(bg="#f0f0f0")
        
        # ã‚¿ã‚¤ãƒˆãƒ«
        title_label = tk.Label(
            self.root,
            text="ğŸŒ WebSocketã‚¿ãƒ–æº–æ‹  è‡ªå‹•æ¥ç¶šSlideSwitch",
            font=("Yu Gothic UI", 16, "bold"),
            bg="#f0f0f0"
        )
        title_label.pack(pady=10)
        
        # æ”¹å–„ç‚¹èª¬æ˜
        improvements_text = """ğŸ”§ WebSocketã‚¿ãƒ– Phase4 ä»•æ§˜æº–æ‹ :
â€¢ 5ã¤ã®ã‚µãƒ¼ãƒ“ã‚¹å¯¾å¿œ: ã‚ã‚“ã‚³ãƒ¡ã€MessageBusã€æ£’èª­ã¿ã¡ã‚ƒã‚“ã€VOICEVOXã€OBS
â€¢ SlideSwitch.set() ã«ã‚ˆã‚‹ä¸€å…ƒçš„çŠ¶æ…‹ç®¡ç†
â€¢ èµ·å‹•æ™‚è‡ªå‹•æ¥ç¶š + æ¥ç¶šå¤±æ•—æ™‚3ç§’å¾Œè‡ªå‹•OFF
â€¢ çŠ¶æ…‹åˆ¥ã‚«ãƒ©ãƒ¼è¡¨ç¤º: èµ¤(æœªæ¥ç¶š) â†’ ã‚ªãƒ¬ãƒ³ã‚¸(æ¥ç¶šä¸­) â†’ ç·‘(æ¥ç¶šæ¸ˆã¿)
â€¢ UIæ›´æ–°ã¨ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ã®å®Œå…¨åŒæœŸ"""
        
        improvements_label = tk.Label(
            self.root,
            text=improvements_text,
            font=("Yu Gothic UI", 9),
            bg="#f0f0f0",
            justify=tk.LEFT
        )
        improvements_label.pack(pady=5)
        
        # ã‚¹ã‚¤ãƒƒãƒã‚¨ãƒªã‚¢
        switches_frame = tk.LabelFrame(
            self.root, 
            text="ğŸŒ WebSocketã‚¿ãƒ– ã‚µãƒ¼ãƒ“ã‚¹æ¥ç¶š", 
            font=("Yu Gothic UI", 12, "bold")
        )
        switches_frame.pack(fill=tk.BOTH, expand=True, padx=20, pady=10)
        
        # WebSocketã‚¿ãƒ–ä»•æ§˜æº–æ‹  ã‚µãƒ¼ãƒ“ã‚¹ä¸€è¦§
        services = [
            ('onecomme', 'ğŸ“¡ ã‚ã‚“ã‚³ãƒ¡ã€€ã€€ã€€'),
            ('messagebus', 'ğŸšŒ MessageBusã€€'),
            ('bouyomi', 'ğŸµ æ£’èª­ã¿ã¡ã‚ƒã‚“ã€€'),
            ('voicevox', 'ğŸ¤ VOICEVOXã€€ã€€'),
            ('obs', 'ğŸ“º OBSã€€ã€€ã€€ã€€ã€€')
        ]
        
        for service_key, service_name in services:
            self._create_service_row(switches_frame, service_key, service_name)
        
        # ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ«ãƒ‘ãƒãƒ«
        self._create_control_panel()
        
        # ãƒ­ã‚°ã‚¨ãƒªã‚¢
        self._create_log_area()
    
    def _create_service_row(self, parent, service_key, service_name):
        """ã‚µãƒ¼ãƒ“ã‚¹è¡Œä½œæˆ"""
        row_frame = tk.Frame(parent, bg="#f5f5f5", relief="solid", bd=1)
        row_frame.pack(fill=tk.X, padx=5, pady=3)
        
        # ã‚µãƒ¼ãƒ“ã‚¹åï¼ˆWebSocketã‚¿ãƒ–ä»•æ§˜æº–æ‹ ã®å›ºå®šå¹…ï¼‰
        name_label = tk.Label(
            row_frame,
            text=service_name,  # ã‚¢ã‚¤ã‚³ãƒ³ä»˜ãã‚µãƒ¼ãƒ“ã‚¹å
            font=("MS Gothic", 11),  # Phase4ä»•æ§˜: MS Gothic
            bg="#f5f5f5",
            width=18,  # å›ºå®šå¹…
            anchor="w"
        )
        name_label.pack(side=tk.LEFT, padx=10, pady=5)
        
        # SlideSwitch
        def on_toggle(key, value):
            print(f"ğŸ”„ {key} çŠ¶æ…‹å¤‰æ›´: {value}")
            if value:
                # ONæ™‚ã¯è‡ªå‹•æ¥ç¶šé–‹å§‹
                self.connection_manager.start_auto_connection(self.switches[key], key)
        
        slide_switch = SlideSwitch(
            row_frame,
            text_on="ON",
            text_off="OFF",
            initial_value=False,
            callback=on_toggle,
            service_key=service_key
        )
        slide_switch.pack(side=tk.LEFT, padx=10, pady=5)
        self.switches[service_key] = slide_switch
        
        # çŠ¶æ…‹è¡¨ç¤º
        status_label = tk.Label(
            row_frame,
            text="âšª ç„¡åŠ¹",
            font=("Yu Gothic UI", 10),
            bg="#f5f5f5",
            fg="gray"
        )
        status_label.pack(side=tk.LEFT, padx=10, pady=5)
    
    def _create_control_panel(self):
        """ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ«ãƒ‘ãƒãƒ«ä½œæˆ"""
        control_frame = tk.LabelFrame(
            self.root, 
            text="ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ«", 
            font=("Yu Gothic UI", 11, "bold")
        )
        control_frame.pack(fill=tk.X, padx=20, pady=5)
        
        button_frame = tk.Frame(control_frame)
        button_frame.pack(pady=5)
        
        def auto_connect_all():
            print("ğŸš€ WebSocketã‚¿ãƒ– å…¨ã‚µãƒ¼ãƒ“ã‚¹è‡ªå‹•æ¥ç¶šé–‹å§‹")
            for service_key, switch in self.switches.items():
                switch.set(True)  # ONçŠ¶æ…‹ã«ã—ã¦ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ã§è‡ªå‹•æ¥ç¶š
        
        def force_off_all():
            print("ğŸ”Œ WebSocketã‚¿ãƒ– å…¨ã‚µãƒ¼ãƒ“ã‚¹å¼·åˆ¶åˆ‡æ–­")
            for service_key, switch in self.switches.items():
                set_slide_switch_state(switch, False, self.log_text, f"âŒ {service_key} å¼·åˆ¶åˆ‡æ–­")
        
        def test_auto_off():
            print("â° WebSocketã‚¿ãƒ– å…¨ã‚µãƒ¼ãƒ“ã‚¹è‡ªå‹•OFF ãƒ†ã‚¹ãƒˆ")
            for service_key, switch in self.switches.items():
                switch.set(True)  # ä¸€æ—¦ON
                switch.auto_off(3000)  # 3ç§’å¾Œè‡ªå‹•OFF
        
        # ãƒœã‚¿ãƒ³é…ç½®
        tk.Button(button_frame, text="ğŸš€ å…¨è‡ªå‹•æ¥ç¶š", command=auto_connect_all).pack(side=tk.LEFT, padx=3)
        tk.Button(button_frame, text="ğŸ”Œ å…¨å¼·åˆ¶OFF", command=force_off_all).pack(side=tk.LEFT, padx=3)
        tk.Button(button_frame, text="â° è‡ªå‹•OFFí…ŒìŠ¤ãƒˆ", command=test_auto_off).pack(side=tk.LEFT, padx=3)
    
    def _create_log_area(self):
        """ãƒ­ã‚°ã‚¨ãƒªã‚¢ä½œæˆ"""
        log_frame = tk.LabelFrame(
            self.root, 
            text="å‹•ä½œãƒ­ã‚°", 
            font=("Yu Gothic UI", 10, "bold")
        )
        log_frame.pack(fill=tk.BOTH, expand=True, padx=20, pady=5)
        
        # ãƒ­ã‚°ãƒ†ã‚­ã‚¹ãƒˆã‚¦ã‚£ã‚¸ã‚§ãƒƒãƒˆ
        self.log_text = tk.Text(
            log_frame, 
            height=8, 
            font=("Consolas", 9), 
            bg="#f8f8f8",
            wrap=tk.WORD
        )
        log_scrollbar = tk.Scrollbar(log_frame, orient="vertical", command=self.log_text.yview)
        self.log_text.configure(yscrollcommand=log_scrollbar.set)
        
        self.log_text.pack(side=tk.LEFT, fill=tk.BOTH, expand=True)
        log_scrollbar.pack(side=tk.RIGHT, fill=tk.Y)
        
        # åˆæœŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
        self.log_text.insert("end", "ğŸŒ WebSocketã‚¿ãƒ–æº–æ‹  è‡ªå‹•æ¥ç¶šSlideSwitch é–‹å§‹\n")
        self.log_text.insert("end", "ğŸ“¡ ã‚ã‚“ã‚³ãƒ¡ã€ğŸšŒ MessageBusã€ğŸµ æ£’èª­ã¿ã¡ã‚ƒã‚“ã€ğŸ¤ VOICEVOXã€ğŸ“º OBS\n")
        self.log_text.insert("end", "ğŸ’¡ å„ã‚¹ã‚¤ãƒƒãƒã‚’ã‚¯ãƒªãƒƒã‚¯ã—ã¦å‹•ä½œç¢ºèªã—ã¦ãã ã•ã„\n")
        self.log_text.insert("end", "ğŸ”§ Phase4ä»•æ§˜: èµ·å‹•æ™‚è‡ªå‹•æ¥ç¶š + æ¥ç¶šå¤±æ•—æ™‚3ç§’å¾Œè‡ªå‹•OFF\n\n")
    
    def run(self):
        """ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³å®Ÿè¡Œ"""
        print("ğŸŒ WebSocketã‚¿ãƒ–æº–æ‹  è‡ªå‹•æ¥ç¶šSlideSwitch é–‹å§‹")
        print("ğŸ“¡ ã‚ã‚“ã‚³ãƒ¡ã€ğŸšŒ MessageBusã€ğŸµ æ£’èª­ã¿ã¡ã‚ƒã‚“ã€ğŸ¤ VOICEVOXã€ğŸ“º OBS")
        print("ğŸ”§ Phase4ä»•æ§˜: SlideSwitch.set()ã«ã‚ˆã‚‹ä¸€å…ƒçš„çŠ¶æ…‹ç®¡ç†")
        
        self.root.mainloop()
        
        print("âœ… WebSocketã‚¿ãƒ– SlideSwitch ãƒ‡ãƒ¢çµ‚äº†")


# ===== å˜ä½“ãƒ†ã‚¹ãƒˆ =====

def test_slide_switch_improvements():
    """SlideSwitchæ”¹å–„ç‚¹ãƒ†ã‚¹ãƒˆ"""
    print("ğŸ§ª === SlideSwitchæ”¹å–„ç‚¹ãƒ†ã‚¹ãƒˆ ===")
    
    test_results = []
    
    try:
        # ãƒ†ã‚¹ãƒˆç”¨UIä½œæˆ
        root = tk.Tk()
        root.withdraw()  # ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ã‚’éš ã™
        
        callback_calls = []
        
        def test_callback(service_key, value):
            callback_calls.append((service_key, value))
        
        # 1. SlideSwitchä½œæˆãƒ†ã‚¹ãƒˆ
        slide_switch = SlideSwitch(
            root,
            initial_value=False,
            callback=test_callback,
            service_key="test_service"
        )
        
        assert slide_switch.get() == False, "åˆæœŸå€¤ãŒæ­£ã—ãè¨­å®šã•ã‚Œã‚‹ã“ã¨"
        test_results.append("âœ… åˆæœŸå€¤è¨­å®š: OK")
        
        # 2. set()ãƒ¡ã‚½ãƒƒãƒ‰ãƒ†ã‚¹ãƒˆ
        slide_switch.set(True)
        assert slide_switch.get() == True, "set()ã§çŠ¶æ…‹ãŒå¤‰æ›´ã•ã‚Œã‚‹ã“ã¨"
        assert len(callback_calls) == 1, "ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ãŒå‘¼ã³å‡ºã•ã‚Œã‚‹ã“ã¨"
        assert callback_calls[0] == ("test_service", True), "ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯å¼•æ•°ãŒæ­£ã—ã„ã“ã¨"
        
        test_results.append("âœ… set()ãƒ¡ã‚½ãƒƒãƒ‰: OK")
        
        # 3. toggle()ãƒ¡ã‚½ãƒƒãƒ‰ãƒ†ã‚¹ãƒˆ
        callback_calls.clear()
        slide_switch.toggle()
        assert slide_switch.get() == False, "toggle()ã§çŠ¶æ…‹ãŒåˆ‡ã‚Šæ›¿ã‚ã‚‹ã“ã¨"
        assert len(callback_calls) == 1, "toggleæ™‚ã«ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ãŒå‘¼ã³å‡ºã•ã‚Œã‚‹ã“ã¨"
        
        test_results.append("âœ… toggle()ãƒ¡ã‚½ãƒƒãƒ‰: OK")
        
        # 4. è‡ªå‹•OFFæ©Ÿèƒ½ãƒ†ã‚¹ãƒˆ
        slide_switch.set(True)
        slide_switch.auto_off(100)  # 0.1ç§’å¾Œ
        
        # 0.2ç§’å¾…æ©Ÿ
        root.after(200, root.quit)
        root.mainloop()
        
        assert slide_switch.get() == False, "è‡ªå‹•OFFãŒå®Ÿè¡Œã•ã‚Œã‚‹ã“ã¨"
        test_results.append("âœ… è‡ªå‹•OFFæ©Ÿèƒ½: OK")
        
        # 5. set_slide_switch_state()çµ±åˆãƒ†ã‚¹ãƒˆ
        callback_calls.clear()
        set_slide_switch_state(slide_switch, True)
        
        assert slide_switch.get() == True, "set_slide_switch_state()ã§çŠ¶æ…‹ãŒå¤‰æ›´ã•ã‚Œã‚‹ã“ã¨"
        assert len(callback_calls) == 1, "çµ±åˆé–¢æ•°ã§ã‚‚ã‚³ãƒ¼ãƒ«ãƒãƒƒã‚¯ãŒå‘¼ã³å‡ºã•ã‚Œã‚‹ã“ã¨"
        
        test_results.append("âœ… çµ±åˆé–¢æ•°: OK")
        
        root.destroy()
        
        print("ğŸ‰ === SlideSwitchæ”¹å–„ç‚¹ãƒ†ã‚¹ãƒˆå®Œäº† ===")
        for result in test_results:
            print(f"  {result}")
        
        return True
        
    except Exception as e:
        print(f"âŒ ãƒ†ã‚¹ãƒˆã‚¨ãƒ©ãƒ¼: {e}")
        import traceback
        traceback.print_exc()
        return False


